<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/memory_anim_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ringColor">

    <LinearLayout
        android:id="@+id/memory_anim_topLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/curIndexLay"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/curIndexTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/curIndexTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#160;/&#160;"
            android:textColor="@color/white_e"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/memory_anim_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textColor="@color/white_e"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/memory_anim_rocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boost_img_rocket"/>

    <TextView
        android:id="@+id/memory_anim_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:text="正在加速 系统桌面"
        android:textColor="@color/white_e"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>