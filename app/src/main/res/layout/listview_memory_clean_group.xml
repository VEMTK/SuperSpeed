<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/memory_chid_name"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:lines="1"
            android:scaleType="centerCrop"
            android:singleLine="true"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/memory_select_counts"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/back_coner_grey"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/trans_80"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/memory_group_statuesLay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center">

            <ImageView
                android:id="@+id/memory_child_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbox_partialchecked"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_e"/>

</LinearLayout>